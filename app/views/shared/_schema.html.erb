<% content_for :schema do %>
  <% listItems = [
    '{
      "@type": "ListItem",
      "position": 1,
      "item": {
        "@id": "https://www.eastbaydsa.org",
        "name": "East Bay DSA"
      }
    }'
  ] %>

  <% if @page %>
    <% (@page.all_parents + [@page]).each_with_index do |p, index|
      listItems << "{
        \"@type\": \"ListItem\",
        \"position\": #{index + 2},
        \"item\": {
          \"@id\": \"https://www.eastbaydsa.org/#{p.slug}\",
          \"name\": \"#{p.title}\"
        }
      }"
    end %>
  <% end %>

  <script type="application/ld+json">
    {
      "@context": "http://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement":
        [
          <%= listItems.join(',').html_safe %>
        ]
    }
  </script>
<% end %>
